<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="BooksCurs.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:BooksCurs"
    xmlns:view="clr-namespace:BooksCurs.Views"
    xmlns:auth="clr-namespace:BooksCurs.Views.Auth"
    xmlns:routes="clr-namespace:BooksCurs.Navigation"
    Shell.FlyoutBehavior="Disabled"
    Title="О книгах">

    <TabBar>
        <ShellContent Icon="images//author-publications.png" 
                      Title="Книги"
                      ContentTemplate="{DataTemplate view:BooksPage }"/>
        <ShellContent Icon="images//author-publications.png" 
                      Title="Авторы"
                      ContentTemplate="{DataTemplate view:AuthorsPage }"/>
        <ShellContent Icon="images//author-publications.png" 
                      Title="Жанры"
                      ContentTemplate="{DataTemplate view:GenresPage }"/>
        <ShellContent Icon="images//author-publications.png" 
                      Title="Публикации автора"
                      ContentTemplate="{DataTemplate view:AuthorPublicatesPage }"/>
    </TabBar>

    <ShellContent Route="{x:Static routes:Routes.AuthPage}" ContentTemplate="{DataTemplate auth:AuthPage}" />
    <ShellContent Route="{x:Static routes:Routes.AuthReg}" ContentTemplate="{DataTemplate auth:RegPage}" />
    
</Shell>
